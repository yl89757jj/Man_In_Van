<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hauling"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.luy.maninvan.HaulingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/van_accept"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="2"
            android:background="@color/Background"
            android:padding="2dp"
            android:text="Luna Accepts!"
            android:textAlignment="center"
            android:textAppearance="@style/NormalText"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/van_img"
            android:layout_width="match_parent"
            android:src="@drawable/user"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp" />
        <TextView
            android:id="@+id/van_note"
            android:layout_width="match_parent"
            android:text="Luna has accept your job. Make sure to contact Luna to confirm pick up time and any details! Don't forget you need to pay Luna in chash as soon as the job done."
            android:layout_height="0dp"
            android:layout_weight="4"
            android:textAppearance="@style/NormalText"
            android:textAlignment="textStart"
            android:textColor="@color/common_google_signin_btn_text_light_focused"
            android:padding="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textColor="@color/common_google_signin_btn_text_light_focused"
            android:padding="5dp">
            <ImageView
                android:layout_width="0dp"
                android:src="@drawable/car"
                android:layout_weight="2"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/van_type"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:text="Large Box Truck"
                android:layout_height="match_parent"
                android:textAppearance="@style/NormalText"
                android:textSize="28sp"
                android:textAlignment="center"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:padding="2dp" />
        </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:padding="5dp">
                <ImageView
                    android:layout_width="0dp"
                    android:src="@drawable/phone"
                    android:layout_weight="2"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/van_phone"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:text="123-456-7890"
                    android:layout_height="match_parent"
                    android:textAppearance="@style/NormalText"
                    android:textSize="28sp"
                    android:textAlignment="center"
                    android:textColor="@color/common_google_signin_btn_text_light_focused"
                    android:padding="2dp" />
            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textColor="@color/common_google_signin_btn_text_light_focused"
            android:padding="5dp">
            <ImageView
                android:layout_width="0dp"
                android:src="@drawable/money"
                android:layout_weight="2"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/van_price"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:text="$100"
                android:layout_height="match_parent"
                android:textAppearance="@style/NormalText"
                android:textSize="28sp"
                android:textAlignment="center"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:padding="2dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textColor="@color/common_google_signin_btn_text_light_focused"
            android:padding="5dp"
            >

            <Button
                android:onClick="sendMessage"
                android:layout_height="match_parent"
                android:text="MESSAGE DRIVER"
                android:layout_width="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
